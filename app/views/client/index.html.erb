<h1> Events </h1>
<div class="container">

<div class="jumbotron">
   <h1 class="display-3">Events</h1>
</div>

  <div class="row">
  <% @events.each do |event| %>

            <div class="col-6 col-lg-4">
              <h2><%= event.name %></h2>
              <span><%= event.date.strftime("%B %-d, %Y") %></span><br>
              <span> <%= event.location %></span><br>
              <span class="small" ><%= event.price %></span><br>
              <p><%= link_to "Attendance", event_path(event), :class => 'btn btn-primary' %></p><br>
            </div><!--/span-->

        
<% end %>
</div><!--/row-->


  

</div>